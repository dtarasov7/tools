---
# Remember, leave a key empty if there is no value.  None will be a string,
# not a Python "NoneType"
client:
  hosts:
    - {{ ansible_host }}
  port: {{ opensearch['port0'] | default('9200') }}
  url_prefix:
  use_ssl: True
  certificate:
  client_cert:
  client_key:
  ssl_no_validate: True
  username: {{ opensearch['admin_user'] | default('admin') }}
  password: {{ opensearch['admin_passwd'] }}
  timeout: 30
  master_only: False

logging:
  loglevel: INFO
  logfile: /var/log/curator.log
  logformat: default
  blacklist: ['elasticsearch', 'urllib3']

